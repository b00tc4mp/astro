  .catch(error => {
    console.error('Error:', error);
  });

---
<Layout title="Users List">
    <h1 class="text-3xl mb-7 text-center">Users list Mongo Atlas DB</h1>
    
    <a class="flex flex-col items-center mb-4" href="/">
        <LoginButton>Home</LoginButton>
    </a>
    <div class="flex flex-col content-center text-center"  id="usuarios">
        {res.map( users=>(
            <p>{users.nombre}</p>
        )
        )}
    </div>
</Layout>